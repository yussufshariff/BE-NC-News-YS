{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": 1527695953341
        }
      ]
    }
  },

  "GET /api/users": {
    "description": "serves an array of users",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "icellusedkars",
          "name": "sam",
          "avatar_url": "https://avatars2.githubusercontent.com/u/24604688?s=460&v=4"
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an array of articles by the id ",
    "queries": [],
    "parameters": ["article_id"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 100,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": "11"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of comments from an article",
    "queries": [],
    "parameters": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 11,
          "body": "Ambidextrous marsupial",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-09-19T23:10:00.000Z"
        },
        {
          "comment_id": 10,
          "body": "git push origin master",
          "article_id": 3,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2020-06-20T07:24:00.000Z"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "serves an array of comments from an article",
    "queries": [],
    "parameters": ["article_id"],
    "exampleBody": {
      "username": "Corsair_51",
      "body": "This is my favourite article"
    },
    "exampleResponse": {
      "newComment": [
        {
          "comment_id": 7,
          "body": "This is my favourite article",
          "review_id": 1,
          "author": "Corsair_51",
          "votes": 0,
          "created_at": "1970-01-01T00:00:00.000Z"
        }
      ]
    }
  },
  "PATCH/api/articles/:article_id": {
    "description": "updates article with correct vote count incremented or decremented by b=given number",
    "queries": [],
    "parameters": ["article_id"],
    "exampleBody": {
      "inc_votes": 100
    },
    "exampleResponse": {
      "article": [
        {
          "article_id": 1,
          "title": "Living in the shadow of a great man",
          "topic": "mitch",
          "author": "butter_bridge",
          "body": "I find this existence challenging",
          "created_at": "2020-07-09T20:11:00.000Z",
          "votes": 200,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700"
        }
      ]
    }
  },

  "DELETE/api/comments/:comment_id": {
    "description": "deletes a comment by the ID",
    "queries": [],
    "parameters": ["comment_id"],
    "exampleResponse": { "statusCode": 204, "msg": "Comment not found" }
  }
}
